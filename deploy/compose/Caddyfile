http://localhost:8000 {
    
	handle_path /api/* {
		reverse_proxy /identity/* dndevops-identity:3000
		reverse_proxy /events/* dndevops-events:3000
		reverse_proxy /game/* dndevops-game:3000
	}

	reverse_proxy / web:5678
}

http://mailpit.localhost:8000 {
    reverse_proxy mailpit:8025
}

http://rabbitmq.localhost:8000 {
	reverse_proxy rabbitmq:15672
}